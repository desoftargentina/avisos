{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../dist",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types",
      "./polyfills/typings"
    ],
    "paths": {
      "*": [
        "*",
        "./node_modules/*"
      ],
      "api": [
        "../api"
      ]
    },
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2018.promise"
    ]
  }
}